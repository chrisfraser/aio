{{!< default}}

<main class="posts">
  {{#foreach posts}}

    <article class="{{post_class}}">
      <div class="container post-container">
        <header class="post-header">

          <span class="post-meta">
						<time class="black-label" datetime="{{date format='YYYY-MM-DD'}}">
              {{date format="DD MMM YYYY"}}
            </time>
            {{tags prefix="on "}}
					</span>

          <h2 class="post-title">
            <a href="{{url}}">{{{title}}}</a>
          </h2>
        </header>
        <section class="post-excerpt">
          <p>{{excerpt}}&hellip;</p>
        </section>
      </div>
    </article>

  {{/foreach}}

  {{pagination}}
</main>
